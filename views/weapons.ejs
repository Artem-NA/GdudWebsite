      <script>
        document.addEventListener("DOMContentLoaded", function () {
          const scopeButton = document.querySelector(".scope-btn.btn-left");
          const scopeInner = document.querySelector(".scope-inner");

          scopeButton.addEventListener("click", function () {
            scopeInner.classList.toggle("night-vision-active");
          });
        });

        function changeBackground(event) {
          const file = event.target.files[0];
          const scopeInner = document.querySelector('.scope-inner');

          if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
              scopeInner.style.backgroundImage = `url(${e.target.result})`;
            }
            reader.readAsDataURL(file);
          }
        }







        let heroArea = document.querySelector('.hero_area');
        let images = ['/img/wo/p1.jpeg', '/img/wo/night.jpeg'];
        let index = 0;

        setInterval(() => {
          heroArea.style.backgroundImage = `url(${images[index]})`;
          index = (index + 1) % images.length;
        }, 7000); // Change image every 5 seconds

      </script>
